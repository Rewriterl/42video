<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stelpolvo.video.dao.AuthRoleElementOperationDao">

    <resultMap id="AuthElementOperationResultMap" type="com.stelpolvo.video.domain.AuthRoleElementOperation">
        <id column="id" property="id"/>
        <id column="roleId" property="roleId"/>
        <id column="elementOperationId" property="elementOperationId"/>
        <association property="authElementOperation" javaType="com.stelpolvo.video.domain.AuthElementOperation">
            <id column="elementName" property="elementName"/>
            <id column="elementCode" property="elementCode"/>
            <id column="operationType" property="operationType"/>
        </association>
    </resultMap>

    <select id="getRoleElementOperationsByRoleIds" parameterType="java.util.Set" resultMap="AuthElementOperationResultMap">
        select
            areo.*,
            aeo.elementName,
            aeo.elementCode,
            aeo.operationType
        from
            t_auth_role_element_operation areo
            left join t_auth_element_operation aeo on areo.elementOperationId = aeo.id
        where
            areo.roleId in
            <foreach collection="roleIds" item="roleId" index="index" open="(" close=")" separator=",">
                #{roleId}
            </foreach>
    </select>

</mapper>