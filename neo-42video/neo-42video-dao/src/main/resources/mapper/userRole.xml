<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stelpolvo.video.dao.UserRoleDao">

    <select id="getUserRolesByUserId" parameterType="java.lang.Long" resultType="com.stelpolvo.video.domain.UserRole">
        select ur.*,
               ar.name roleName,
               ar.code roleCode
        from t_user_role ur
                 left join t_auth_role ar on ur.roleId = ar.id
        where ur.userId = #{userId}
    </select>

    <insert id="addUserRole" parameterType="com.stelpolvo.video.domain.UserRole">
        insert into t_user_role(userId,
                                roleId,
                                createTime)
        values (#{userId},
                #{roleId},
                now())
    </insert>

</mapper>